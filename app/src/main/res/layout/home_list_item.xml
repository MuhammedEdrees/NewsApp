<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/item_image"
            android:foreground="@drawable/image_gradient"
            android:src="@drawable/ic_splash"
            android:scaleType="fitXY"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/item_date"
                tools:text="Sat 20, Jun 2010"
                android:textAppearance="@style/SubText"
                android:layout_margin="8dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/item_title"
                app:layout_constraintStart_toStartOf="@id/item_date"
                app:layout_constraintEnd_toEndOf="@id/item_date"
                app:layout_constraintBottom_toTopOf="@id/item_date"
                tools:text="This is a headline text for the title"
                android:textAppearance="@style/HeadlineText"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/item_title"
                android:id="@+id/item_puplisher"
                tools:text="puplisher"
                android:textAppearance="@style/SubText"
                app:layout_constraintStart_toStartOf="@id/item_title"
                app:layout_constraintEnd_toEndOf="@id/item_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>